@model Competition

@{
    ViewData["Title"] = "Competition Details";
}

<h2>@Model.Name</h2>

<div>
    <h4>Competition Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event Date - Location
        </dt>
        <dd class="col-sm-10">
            @Model.EventDate.ToString("yyyy-MM-dd") - @Model.Location
        </dd>
        <dt class="col-sm-2">
            Game Type
        </dt>
        <dd class="col-sm-10">
            @Model.GameType
        </dd>
        <dt class="col-sm-2">
            Prize Pool
        </dt>
        <dd class="col-sm-10">
            @Model.PrizePool
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
{
    <div>
    <a asp-action="Edit" asp-route-id="@Model.CompetitionId">Edit</a> |
    <a asp-action="Index">Back Competitions</a>
    </div>
    } 
    else
    {
        <a asp-action="Index">Back Competitions</a>
    } 
</div>
