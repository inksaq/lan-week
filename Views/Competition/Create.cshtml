@model CreateCompetitionViewModel

@{
    ViewData["Title"] = "Create Competition";
}


<h2>Create Competition</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" class="form-control" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameType"></label>
        <input asp-for="GameType" class="form-control" />
        <span asp-validation-for="GameType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrizePool"></label>
        <input asp-for="PrizePool" class="form-control" />
        <span asp-validation-for="PrizePool" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
</form>
